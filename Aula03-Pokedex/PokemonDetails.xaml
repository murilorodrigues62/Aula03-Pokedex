<Page
    x:Class="Aula03_Pokedex.PokemonDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aula03_Pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="images/pokemon_background.png"/>
        </Grid.Background>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="100" Margin="135,10,0,0" VerticalAlignment="Top" Width="100"/>
        <StackPanel HorizontalAlignment="Left" Height="300" Margin="10,119,0,0" VerticalAlignment="Top" Width="340">
            <TextBlock x:Name="txtNome" TextWrapping="Wrap" Text="TextBlock" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtTipo" TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock x:Name="txtVida" TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock x:Name="txtAtaque" TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock x:Name="txtDefesa" TextWrapping="Wrap" Text="TextBlock"/>
        </StackPanel>
        <Button x:Name="btnRetornar" Content="Retornar" HorizontalAlignment="Left" Margin="10,424,0,0" VerticalAlignment="Top" Width="340" Click="btnRetornar_Click"/>

    </Grid>
</Page>
